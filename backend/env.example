# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Database Configuration
DATABASE_PATH=./data/lchelper.db

# OpenAI API Configuration (for generating hints)
OPENAI_API_KEY=your-openai-api-key-here

# Google Gemini API Configuration (alternative)
GEMINI_API_KEY=your-gemini-api-key-here
DEFAULT_AI_PROVIDER=gemini

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_ID_PREMIUM=price_your-premium-price-id
STRIPE_PRICE_ID_PRO=price_your-pro-price-id

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,chrome-extension://your-extension-id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_FREE=10
RATE_LIMIT_MAX_PREMIUM=30
RATE_LIMIT_MAX_PRO=50

# Frontend URL (for Stripe redirects)
FRONTEND_URL=http://localhost:3000

