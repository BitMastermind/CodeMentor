# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Database Configuration
DATABASE_PATH=./data/lchelper.db

# AI API Configuration (for generating hints)
# Difficulty-based routing: Easy → Gemini Flash, Medium/Hard → Claude Sonnet

# Google Gemini API (for Easy problems - cheap)
GEMINI_API_KEY=your-gemini-api-key-here

# Anthropic Claude API (for Medium/Hard problems - better quality)
CLAUDE_API_KEY=your-claude-api-key-here
# Alternative env var name (some setups use this)
ANTHROPIC_API_KEY=your-claude-api-key-here

# OpenAI API (fallback option)
OPENAI_API_KEY=your-openai-api-key-here

# Default provider (used as fallback if difficulty-based selection fails)
DEFAULT_AI_PROVIDER=gemini

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_ID_PREMIUM=price_your-premium-price-id
STRIPE_PRICE_ID_PRO=price_your-pro-price-id

# Razorpay Configuration
RAZORPAY_KEY_ID=rzp_test_your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret
RAZORPAY_PLAN_ID_PREMIUM=plan_your-premium-plan-id
RAZORPAY_PLAN_ID_PRO=plan_your-pro-plan-id

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,chrome-extension://your-extension-id

# Rate Limiting (DAILY limits, not per-minute!)
# Window is 24 hours in milliseconds
RATE_LIMIT_WINDOW_MS=86400000
RATE_LIMIT_MAX_FREE=10
RATE_LIMIT_MAX_PREMIUM=25
RATE_LIMIT_MAX_PRO=60

# Frontend URL (for Stripe redirects)
FRONTEND_URL=http://localhost:3000

# Admin Configuration
# Set this to your admin email address to access admin analytics endpoints
ADMIN_EMAIL=admin@example.com

